<network>
  <name>{{ NETWORK_NAME }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name="{{ BRIDGE_NAME }}" stp='on' delay='0'/>
  <ip address='{{ IP_ADDRESS }}' netmask='255.255.255.0'>
    <dhcp>
      <range start='{{ IP_ADDRESS_START }}' end='{{ IP_ADDRESS_END }}'/>
    </dhcp>
  </ip>
</network>